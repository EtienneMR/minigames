<h1 id="title">??? vs ???</h1>
<form id="new" class="game-new">
    <h3>Nouvelle partie</h3>
    <div class="grid">
        <label for="new-count">Nombre de paires</label>
        <input id="new-count" type="number" value="10" required="" min="2">
    </div>
    <button id="new-start">Créer</button>
</form>
<div class="grid" id="rules">
    <div><b>Règles</b></div>
    <div><b id="rules-presset">...</b></div>
    <div>Nombre de paires</div>
    <div id="rules-count">...</div>
</div>
<span id="remaning"></span>
<div class="card-container" id="list">
    <div class="flip-card">
        <div class="flip-card-inner">
            <div class="flip-card-front">
                <img src="/assets/img/favicon-96x96-transparent.png" alt="Card">
            </div>
            <div class="flip-card-back">
                <img src="/assets/img/favicon-96x96-transparent.png" alt="Card">
            </div>
        </div>
    </div>
</div>
<h3 id="turn">Tour de l'adversaire</h3>
<button id="replay">Rejouer 0/2</button>