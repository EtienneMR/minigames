{{#contentFor "scripts"}}
<script src="/assets/js/index.js" defer=""></script>
{{/contentFor}}

{{#contentFor "meta"}}
<meta property="og:title" content="Mini jeux" />
<meta property="og:site_name" content="etiennemr.fr" />
<meta property="og:type" content="game" />
<meta property="og:description" content="Tu veux défier un ami ? Ou simplement t'amuser ?" />
{{/contentFor}}

<div class="cards">
    {{#each games }}
    <div>
        <h3>{{this.title}}</h3>
        <img src="/assets/img/{{this.id}}.png">
        <hr>
        <p>{{this.desc}}</p>
        <hr>
        <a class="play-btn" title="Jouer" href="/{{this.id}}">
            <i class="bx bx-play"></i>
        </a>
    </div>
    {{/each}}
    <div>
        <form id="join">
            <h3>Rejoindre à partir d'un code</h3>
            <img src="/assets/img/batonnets.png">
            <hr>
            <p class="center">
                <label for="join-code">Code de session</label>
                <input id="join-code" class="code4digit" type="text"
                    minlength="4" maxlength="4" placeholder="0000"
                    required="" autocomplete="off">
            </p>
            <hr>
            <button class="play-btn" title="Jouer" href="#">
                <i class="bx bx-play"></i>
            </button>
        </form>
    </div>
</div>